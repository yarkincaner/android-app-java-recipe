<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_add_category_textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_dialog_add_category_textView_title"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/dialog_add_category_editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/fragment_dialog_add_category_editText_name"/>

</LinearLayout>